{
  "compilerOptions": {
    "target": "ES2016", 
    "module": "CommonJS", 
    "outDir": "./dist", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true, 
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*", 
    "config/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"] 
}
